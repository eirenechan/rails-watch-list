<div class="banner" style="background-image: url(<%= asset_path('list_banner.jpg') %>)">
  <h1><strong>MY MOVIE LISTS</strong></h1>
</div>

    <%# <i data-feather="file-plus"></i> %>

<div class="cards m-5">
  <% @lists.each do |list| %>
    <div id="list-card" style="background-image: url(<%= list.image_url %>)">
      <h2><%= link_to list.name, list_path(list) %></h2>
    </div>
  <% end %>
</div>

<div class="form">
  <h2>Create a New List</h2>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: "btn btn-dark" %>
  <% end %>
</div>
